{% extends 'base.html.twig' %}

{% block title %}Chambres index{% endblock %}

{% block contenu %}
<div class="container"></br>


<center><h1>Liste des Articles  <i class="fas fa-hotel"></i></h1></center></br>

    <table class="table">
        <thead>
            <tr style="background-color: #007bff; color: #fff;">
                <th style="padding: 10px;">Id</th>
                <th style="padding: 10px;">Designation</th>
                <th style="padding: 10px;">Description</th>
                <th style="padding: 10px;">PrixUnitaire</th>
                <th style="padding: 10px;">Quantite</th>
                <th style="padding: 10px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.designation }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.prixUnitaire }}</td>
                <td>{{ article.quantite }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</br>

<a href="{{ path('app_article_new') }}" style="display: inline-block; background-color: #007bff; color: #fff; text-decoration: none; padding: 10px 20px; font-size: 16px; border-radius: 4px; transition: background-color 0.3s;">Ajouter un Article</a>


</div>
{% endblock %}
