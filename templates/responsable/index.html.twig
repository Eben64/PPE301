{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block contenu %}

<div class="container"></br>

    <center><h1>Responsable  <i class="fas fa-user"></i></h1></center></br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Username</th>
                <th>Contact</th>
                
                {# <th>Roles</th>
                <th>Creer_le</th>
                <th>Creer_par</th>
                <th>Modifie_le</th>
                <th>Modifie_par</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsable in responsables %}
            <tr>
                <td>{{ responsable.id }}</td>
                <td>{{ responsable.nom }}</td>
                <td>{{ responsable.prenom }}</td>
                <td>{{ responsable.username }}</td>
                <td>{{ responsable.contact }}</td>
                {#<td>{{ responsable.roles ? responsable.roles|json_encode : '' }}</td>
                <td>{{ responsable.password }}</td>
                <td>{{ responsable.creerLe ? responsable.creerLe|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ responsable.creerPar }}</td>
                <td>{{ responsable.modifieLe ? responsable.modifieLe|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ responsable.modifiePar }}</td> #}
                <td>
                    <a href="{{ path('app_responsable_show', {'id': responsable.id}) }}">show</a>
                    <a href="{{ path('app_responsable_edit', {'id': responsable.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_responsable_new') }}" style="display: inline-block; background-color: #007bff; color: #fff; text-decoration: none; padding: 10px 20px; font-size: 16px; border-radius: 4px; transition: background-color 0.3s;">Ajouter un Responsable</a>


</div>
{% endblock %}
