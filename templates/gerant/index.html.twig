{% extends 'base.html.twig' %}

{% block title %}Gerant{% endblock %}

{% block contenu %}
<div class="container"></br>


<center><h1>Gérant  <i class="fas fa-user"></i></h1></center></br>

    <table class="table">
        <thead>
            <tr style="background-color: #007bff; color: #fff;">
                <th style="padding: 10px;">Id</th>
                <th style="padding: 10px;">Nom</th>
                <th style="padding: 10px;">Prenom</th>
                <th style="padding: 10px;">Username</th>
                <th style="padding: 10px;">Contact</th>
                <th style="padding: 10px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gerant in gerants %}
            <tr>
                <td>{{ gerant.id }}</td>
                <td>{{ gerant.nom }}</td>
                <td>{{ gerant.prenom }}</td>
                <td>{{ gerant.username }}</td>
                <td>{{ gerant.contact }}</td>
                {# <td>{{ gerant.password }}</td>
                <td>{{ gerant.roles ? gerant.roles|json_encode : '' }}</td>
                <td>{{ gerant.creerLe ? gerant.creerLe|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ gerant.creerPar }}</td>
                <td>{{ gerant.modifieLe ? gerant.modifieLe|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ gerant.modifiePar }}</td> #}
                <td>
                    <a href="{{ path('app_gerant_show', {'id': gerant.id}) }}" class="btn btn-primary" style="background-color: #808080; color: #fff; text-decoration: none;">APERÇU</a>
                    <a href="{{ path('app_gerant_edit', {'id': gerant.id}) }}" class="btn btn-primary" style="background-color: #808080; color: #fff; text-decoration: none;">MODIFIER</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table><br>

    <a href="{{ path('app_gerant_new') }}" style="display: inline-block; background-color: #007bff; color: #fff; text-decoration: none; padding: 10px 20px; font-size: 16px; border-radius: 4px; transition: background-color 0.3s;">Ajouter un Gérant</a>


</div>
{% endblock %}
