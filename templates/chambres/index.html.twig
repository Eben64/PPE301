{% extends 'base.html.twig' %}

{% block title %}Chambres index{% endblock %}

{% block contenu %}
<div class="container"></br>


<center><h1>Liste des Chambres  <i class="fas fa-hotel"></i></h1></center></br>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero de Chambre</th>
                <th>Libelle</th>
                <th>Prix Horaire</th>
                <th>Description</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.numeroChambre }}</td>
                <td>{{ chambre.libelle }}</td>
                <td>{{ chambre.prixHoraire }}</td>
                <td>{{ chambre.description }}</td>
                <td>{{ chambre.categorie }}</td>
                <td>
                    <a href="{{ path('app_chambres_show', {'id': chambre.id}) }}">show</a>
                    <a href="{{ path('app_chambres_edit', {'id': chambre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table></br>

<a href="{{ path('app_chambres_new') }}" style="display: inline-block; background-color: #007bff; color: #fff; text-decoration: none; padding: 10px 20px; font-size: 16px; border-radius: 4px; transition: background-color 0.3s;">Ajouter un Client</a>


</div>
{% endblock %}
